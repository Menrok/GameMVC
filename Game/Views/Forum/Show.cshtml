@model Game.Models.ThreadRepliesViewModel

@{
    ViewData["Title"] = "Thread - " + Model.Thread.Title;
}

<h1>@Model.Thread.Title</h1>

<div class="thread-container">

    <p>@Model.Thread.User.Email @Model.Thread.CreatedAt</p>

    <div>
        <p>@Model.Thread.Content</p>
    </div>

    <h3 class="text-center">Odpowiedzi</h3>

    <div>
        @foreach (var reply in Model.Replies)
        {
            <div>
                <p><strong>@reply.User.Email</strong> @reply.CreatedAt</p>
                <p>@reply.Content</p>
            </div>
        }
    </div>
</div>
<h3>Dodaj odpowiedź</h3>

<form method="post" asp-action="AddReply" asp-route-threadId="@Model.Thread.Id">
    <div class="form-group row">
        <div class="col-8">
            <textarea class="form-control" name="content" placeholder="Twoja odpowiedź"></textarea>
        </div>
        <div class="col-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Dodaj odpowiedź</button>
        </div>
    </div>
</form>